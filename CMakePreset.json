{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "linux-debug",
            "inherits": "base",
            "displayName": "Linux Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "toolchainFile": "${sourceDir}/build/linux-debug/build/Debug/generators/conan_toolchain.cmake"
        },
        {
            "name": "linux-release",
            "inherits": "base",
            "displayName": "Linux Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "toolchainFile": "${sourceDir}/build/linux-release/build/Release/generators/conan_toolchain.cmake"
        },
        {
            "name": "aarch64-linux-gnu-debug",
            "inherits": "base",
            "displayName": "AArch64 Linux Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "toolchainFile": "${sourceDir}/build/aarch64-linux-gnu-debug/build/Debug/generators/conan_toolchain.cmake"
        },
        {
            "name": "aarch64-linux-gnu-release",
            "inherits": "base",
            "displayName": "AArch64 Linux Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "toolchainFile": "${sourceDir}/build/aarch64-linux-gnu-release/build/Release/generators/conan_toolchain.cmake"
        }
    ],
    "buildPresets": [
        { "name": "linux-debug", "configurePreset": "linux-debug" },
        { "name": "linux-release", "configurePreset": "linux-release" },
        { "name": "aarch64-linux-gnu-debug", "configurePreset": "aarch64-linux-gnu-debug" },
        { "name": "aarch64-linux-gnu-release", "configurePreset": "aarch64-linux-gnu-release" }
    ]
}